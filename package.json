{
  "name": "morse",
  "version": "1.0.0",
  "description": "Morse Code Application",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.example.morseapp",
    "productName": "MorseApp",
    "mac": {
      "target": [
        {
          "target": "default",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "path/to/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "path/to/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "path/to/icon.png"
    }
  },
  "dependencies": {
    "express": "^4.21.1",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "electron": "^33.0.2",
    "electron-builder": "^24.13.3"
  }
}
