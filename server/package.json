{
  "name": "morse-server",
  "version": "1.0.0",
  "description": "Morse Code Server",
  "author": "mdmatvey <lyoshinmdmatvey@gmail.com>",
  "homepage": "https://github.com/mdmatvey/Morse",
  "type": "module",
  "main": "express/index.js",
  "scripts": {
    "start": "node index.js",
    "build:pkg": "pkg . --output dist/pkg/MorseServer"
  },
  "pkg": {
    "assets": [
      "express/controllers/*.js",
      "express/services/*.js"
    ], 
    "scripts": "express/index.js",
    "targets": [
      "node18-linux-x64",
      "node18-macos-x64",
      "node18-win-x64"
    ]
  },
  "bin": {
    "app": "./express/index.js"
  },
  "build": {
    "appId": "com.example.morseapp",
    "productName": "MorseApp",
    "mac": {
      "target": [
        {
          "target": "default",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "path/to/icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "path/to/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "path/to/icon.png"
    }
  },
  "dependencies": {
    "express": "^4.21.1",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "electron": "^33.0.2",
    "electron-builder": "^24.13.3"
  }
}
